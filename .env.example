# Environment Configuration for Emergency Response System
# Copy this file to .env and update the values for your environment

# Application Settings
APP_NAME="Emergency Response System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
HOST="0.0.0.0"
PORT=8000

# Security Settings
SECRET_KEY="your-super-secret-key-change-in-production-make-it-very-long-and-random"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/emergency_response_db"
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_EXPIRE_TIME=3600

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"
KAFKA_GROUP_ID="emergency_response_group"

# File Storage
MEDIA_ROOT="media"
MEDIA_URL="/media/"
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,video/avi,audio/mp3,audio/wav,application/pdf,text/plain"

# External Services
# Twilio for SMS
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="your_twilio_phone_number"

# Email Settings (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASSWORD="your_app_password"
SMTP_FROM_EMAIL="noreply@panicalert.com"

# Push Notifications
# Firebase Cloud Messaging
FCM_SERVER_KEY="your_fcm_server_key"

# Apple Push Notification Service
APNS_KEY_ID="your_apns_key_id"
APNS_TEAM_ID="your_apns_team_id"
APNS_BUNDLE_ID="com.panicalert.app"

# Geofencing Settings
DEFAULT_GEOFENCE_RADIUS=1000  # meters
MAX_GEOFENCE_RADIUS=10000     # meters

# Alert Settings
MAX_ALERT_RESPONSE_TIME_MINUTES=15
AUTO_ESCALATE_AFTER_MINUTES=5
MAX_EMERGENCY_CONTACTS=5

# Security Settings
ENABLE_MFA=false
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# CORS Settings (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080"
ALLOWED_HOSTS="localhost,127.0.0.1,*"